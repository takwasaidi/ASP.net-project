@model IEnumerable<GesReunions.Models.Utilisateurs>

@{
    ViewBag.Title = "Index";
}

<style>
    /* Classe personnalisée pour les boutons */
    .btn-custom {
        color: #fff; /* Couleur du texte */
        background-color: #007bff; /* Couleur de fond */
        border-color: #007bff; /* Couleur de la bordure */
        padding: 5px 10px; /* Espacement interne */
        font-size: 14px; /* Taille de la police */
        border-radius: 4px; /* Bords arrondis */
        text-decoration: none; /* Retirer le soulignement par défaut */
    }

        .btn-custom:hover {
            color: #fff; /* Couleur du texte au survol */
            background-color: #0056b3; /* Couleur de fond au survol */
            border-color: #004085; /* Couleur de la bordure au survol */
        }

    /* Styles pour la table */
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }

        .table .thead-dark th {
            color: #fff;
            background-color: #343a40;
            border-color: #454d55;
        }
</style>

<br />
<br />
<br />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompteWindows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsabe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role1.nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompteWindows)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsabe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role1.nom)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-custom" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-custom" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-custom" })
                </td>
            </tr>
        }
    </tbody>
</table>

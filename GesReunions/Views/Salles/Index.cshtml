@model IEnumerable<GesReunions.Models.Salles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_test.cshtml";
}

<br />
<br />
<br />


<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouvelle Salle
    </a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">@Html.DisplayFor(modelItem => item.nom)</div>
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(modelItem => item.capacite) Personnes</p>
                </div>
                <div class="card-footer text-right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.nom }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.nom }, new { @class = "btn btn-secondary btn-sm" })
                  
                </div>
            </div>
        </div>
    }
</div>



